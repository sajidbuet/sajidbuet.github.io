 journal = {RSC Advances},
 keywords = {quantum, photonics},
 sjr = {Q1},
 title = {Sb2S3/AlGaAs based Reconfigurable Metasurface for Dynamic Polarization and Directionality Control of Quantum Emitter Emission},
